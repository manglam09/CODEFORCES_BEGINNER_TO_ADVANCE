#include <iostream>
using namespace std;

int CountNum(long long num) {
    int count = 0;
    while(num > 0) {
        int last = num % 10;
        if(last == 4 || last == 7) count++;
        num /= 10;
    }
    return count;
}

int main() {
    long long num;
    cin >> num;
    
    int count = CountNum(num);

    if(count == 4 || count == 7) {
        cout << "YES" << endl;
    } else {
        cout << "NO" << endl;
    }

    return 0;
}
